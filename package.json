{
  "name": "@tsai-platform/libs",
  "version": "0.0.1",
  "description": "Tsailab library",
  "author": "tsailab",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "build:libs": "pnpm --filter=@tsai-platform/* run build",
    "format": "prettier --write \"apps/**/*.ts\" \"packages/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/audio-ws/main",
    "lint": "eslint \"{src,apps,libs,packages,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/audio-ws/test/jest-e2e.json",
    "change": "changeset",
    "version:pkg": "changeset version",
    "vp": "pnpm version:pkg",
    "release": "pnpm build:libs && pnpm changeset publish --registry=https://registry.npmjs.com/"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.12",
    "@commitlint/cli": "19.7.1",
    "@commitlint/config-conventional": "19.7.1",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/swagger": "11.0.3",
    "@nestjs/testing": "^10.0.0",
    "@tsailab/core-types": "0.1.13",
    "@tsailab/schematics": "^1.2.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "class-transformer": "0.5.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "globals": "15.14.0",
    "husky": "9.1.7",
    "jest": "^29.5.0",
    "lint-staged": "15.4.3",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "0.3.20",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/packages/",
      "<rootDir>/apps/"
    ],
    "moduleNameMapper": {
      "^@tsai-platform/common(|/.*)$": "<rootDir>/packages/common/dist/$1",
      "^@tsai-platform/core(|/.*)$": "<rootDir>/packages/core/dist/$1",
      "^@tsai-platform/system(|/.*)$": "<rootDir>/packages/system/dist/$1"
    }
  }
}